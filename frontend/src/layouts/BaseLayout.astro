---
import Navbar from "../components/Navbar/index.astro";
import Footer from "../components/Footer/index.astro";

const response = await fetch("https://strapi.nashuro.cz/graphql",
  {
    method: 'POST',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify({
      query: `
      {
        stredisko {
            data {
                attributes {
                    Nazev
                }
            }
        }
      }
      `,
    }),
  });

const Json = await response.json();
const data = Json.data;

export interface Props {
  title?: string;
}

const title = Astro.props.title
  ? Astro.props.title + `| ${data.stredisko.data.attributes.Nazev}`
  : `Skautské středisko ${data.stredisko.data.attributes.Nazev}`;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="global.css" />
    <title>{title}</title>
  </head>
  <body class="h-screen flex flex-col">
    <Navbar />
    <div class="w-full flex-1 flex flex-col overflow-y-auto bg-gray-100">
      <slot />
      <Footer />
    </div>
  </body>
</html>
